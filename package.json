{
  "name": "pt",
  "packageManager": "pnpm@8.15.5",
  "private": true,
  "engines": {
    "node": "=23.11.0"
  },
  "scripts": {
    "build": "pnpm --filter=pt_frontend run build",
    "build:icons": "pnpm --filter=pt_frontend build:icons",
    "add:icons": "pnpm --filter=pt_frontend add:icons",
    "add:components": "pnpm --filter=pt_frontend add:components",
    "pretest": "pnpm --filter=pt_frontend prebuild",
    "start": "pnpm --filter=pt_frontend start",
    "typecheck": "pnpm --filter=pt_frontend typecheck",
    "test": "pnpm --filter=pt_frontend test",
    "format:fix": "pnpm --filter=pt_frontend run format:fix",
    "format:check": "pnpm --filter=pt_frontend run format:check",
    "lint:check": "pnpm --filter=pt_frontend run lint:check",
    "lint:fix": "pnpm --filter=pt_frontend run lint:fix",
    "biome:check": "pnpm --filter=pt_frontend run biome:check",
    "biome:fix": "pnpm --filter=pt_frontend run biome:fix",
    "eslint:check": "pnpm --filter=pt_frontend eslint:check",
    "eslint:fix": "pnpm --filter=pt_frontend eslint:fix",
    "deploy": "./scripts/deploy.sh",
    "clean": "./scripts/clean.sh",
    "generate": "./scripts/generate.sh",
    "check": "./scripts/check.sh"
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "1.9.4"
  }
}
