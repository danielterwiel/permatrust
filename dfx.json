{
	"canisters": {
		"pt_backend": {
			"type": "rust",
			"package": "pt_backend",
			"candid": "src/pt_backend/pt_backend.did",
			"declarations": {
				"output": "src/declarations/pt_backend",
				"bindings": ["ts", "js", "did"]
			}
		},
		"pt_frontend": {
			"type": "assets",
