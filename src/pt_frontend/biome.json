{
  "files": {
    "ignore": [
      "**/node_modules/**",
      "routeTree.gen.ts",
      "../../node_modules",
      "../declarations/**",
      ".dfx"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "error",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useSelfClosingElements": "error",
        "useShorthandArrayType": "error",
        "useTemplate": "error",
        "useWhile": "error"
      },
      "suspicious": {
        "noAssignInExpressions": "error",
        "noAsyncPromiseExecutor": "error",
        "noCatchAssign": "error",
        "noClassAssign": "error",
        "noDebugger": "error",
        "noDoubleEquals": "error"
      },
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnreachable": "error",
        "noUnusedVariables": "error",
        "noVoidTypeReturn": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "lineWidth": 80
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  }
}
